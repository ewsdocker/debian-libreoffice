# =========================================================================
# =========================================================================
#
#   libresetup copies sample start scripts to the designated folder:
#
#      office   -   sample office start script
#      office2  -   sample office start script with mounted media
#
#   start office with
#
#     docker run --rm \
#                --name=office \
#                -v ${HOME}/bin:/userbin \
#            libreoffice:latest setup
#
#docker run --rm --name=office -v ${HOME}/bin:/userbin ewsdocker/debian-libreoffice setup
#
# =========================================================================

cp -r /usr/local/share/libreoffice/*.run /userbin
cp -r /usr/share/icons/hicolor/scalable/apps /root/icons

lines=$( find . -name "libreoffice-startcenter*" )

echo 
echo "libreoffice container runner copied to /userbin"
echo

exit 0
