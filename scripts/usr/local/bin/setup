# =========================================================================
#
#     docker run --rm \
#                --name=office-setup \
#                -v ${HOME}/.config/docker/libreoffice:/root \
#                -v ${HOME}/bin:/userbin \
#            libreoffice:latest setup
#
# docker run --rm --name=office-setup -v ${HOME}/.config/docker/libreoffice:/root -v ${HOME}/bin:/userbin ewsdocker/debian-libreoffice setup
#
# =========================================================================

. /usr/local/lib/lms/lmsVersion.bash

# =========================================================================

echo 
echo **********************************************************************
echo

lmsVersion

echo 
echo **********************************************************************
echo

cp -r /usr/local/share/libreoffice/*.run /userbin
cp -r /usr/local/share/libreoffice/*.desktop /root

cp -r /usr/share/icons/hicolor/scalable/apps /root/icons

echo 
echo "ewsdocker/debian-libreoffice container setup complete."
echo

exit 0
