#		http://opensource.org/licenses/academic.php
#
# =========================================================================
# =========================================================================
#
#   libresetup copies sample start scripts to the designated folder:
#
#       debian-office   -   sample office start script
#       debian-office2  -   sample office start script with mounted media
#
#   start office with
#
#     docker run --rm \
#                --name=office \
#                -v ${HOME}/bin:/userbin \
#            libreoffice:latest libresetup
#
#docker run --rm --name=office -v ${HOME}/bin:/userbin ewsdocker/debian-libreoffice:6.0.3 libresetup
#
# =========================================================================

cp -r /libreoffice/*.run /userbin
lines=$( find . -name "libreoffice-startcenter*" )

echo 
echo "libreoffice container runner copied to /userbin"
echo

exit 0
