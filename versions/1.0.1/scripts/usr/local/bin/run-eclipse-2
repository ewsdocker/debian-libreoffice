docker run -e DISPLAY=unix${DISPLAY} \
           -v /etc/localtime:/etc/localtime:ro \
           -v /tmp/.X11-unix:/tmp/.X11-unix \
           -v ${HOME}/.Xauthority:${HOME}/.Xauthority \
           -v ${HOME}:/home/user \
           -v ${HOME}/docker:/documents \
           --name=office \
           -it \
        libreoffice:0.0.1
